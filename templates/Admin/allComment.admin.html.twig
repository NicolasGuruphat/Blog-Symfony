{% extends "Admin/base.admin.html.twig" %}
{% block content %}
	<h1>Admin Comment Control Panel</h1>
	<h2>Current comments</h2>
	<ul>
		{% for comment in listComment %}

			<li>
				<a href="{{path('admin_delete_comment', { 'id': comment.id })}}">Delete</a>
				<a href="{{path('admin_validate_comment', { 'id': comment.id })}}">Validate</a>
				<a href="{{path('admin_show_comment', { 'id': comment.id })}}">username :
					{{comment.username}}
					content :
					{{comment.content}}
				</a>
			</li>

		{% endfor %}
	</ul>
{% endblock %}
